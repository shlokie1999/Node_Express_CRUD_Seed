<div class="container">
<hr>
    <div class="row">

        <h2>Add User</h2>

        <div class="col-md-2"></div>

        <div class="col-md-8">


  <form class="form-horizontal" method="post" action="/addUser ">
      
  <div class="form-group">
    <label for="email">Email address:</label>
    <input type="email" class="form-control" name="email">
  </div>
  <div class="form-group">
    <label for="pwd">First Name:</label>
    <input type="First Name" class="form-control" name="fname">
  </div>
  <div class="form-group">
    <label for="pwd">Last Name:</label>
    <input type="First Name" class="form-control" name="lname">
  </div>
  <div class="form-group">
    <label for="pwd">Profession:</label>
    <input type="First Name" class="form-control" name="prof">
  </div>
  
  <button type="submit" class="btn btn-primary btn-block">Submit</button>
 
</form> 

        </div>

        <div class="col-md-2"></div>
    </div>
<hr>
    <div class="row">

         <h2>User Table</h2>

      <div class="col-md-2"></div>
      <div class="col-md-8">

           <table class="table table-hover">
 <thead>
<th>First Name</th>
<th>Last Name</th>
<th>Email</th>
<th>Proffesion</th>
<th>Actions</th>

 </thead>

 <tbody>

{{#each users}} 

    <tr>

    <td>{{this.fname}}</td>
    <td>{{this.lname}}</td>
    <td>{{this.email}}</td>
    <td>{{this.prof}}</td>
    <td>
       <button class="btn btn-primary">Edit</button> 
       <a href="/deleteUser/{{this.id}}"><button class="btn btn-primary">Delete</button></a> </td>

    </tr>
    {{/each}}

 </tbody>
</table>
      </div>
    </div>

</div> 